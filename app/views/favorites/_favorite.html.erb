<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
    <i class="fas fa-heart" id="create-heart" style="color:red;"><%= book.favorites.count %></i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
    <i class="fas fa-heart"><%= book.favorites.count %></i>
  <% end %>
<% end %>